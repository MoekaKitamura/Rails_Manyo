<h1>詳細</h1>

<p id="notice"><%= notice %></p>

<div class="show_area">
  <p>
    <strong>ユーザー名:</strong>
    <%= @user.user_name %>
  </p>

  <p>
    <strong>メールアドレス:</strong>
    <%= @user.email %>
  </p>

  <p>
    <strong>管理者権限:</strong>
    <% if @user.admin == true %>
      ⭕️
    <% else %>
      なし
    <% end %>
  </p>
</div>

<div class="bottom_link">
  <%= link_to t('action.edit'), edit_user_path(@user) %> |
  <%= link_to t('action.back'), users_path %>
</div>

<br>

<table>
  <thead>
    <tr>
      <th>ユーザー名</th>
      <th><%= t('task.task_name') %></th>
      <th><%= t('task.to_do') %></th>
      <th><%= t('task.deadline') %><%= link_to "▼", tasks_path(sort: "deadline") %></th>
      <th><%= t('task.status') %><%= link_to "▼", tasks_path(sort: "status") %></th>
      <th><%= t('task.priority') %><%= link_to "▼", tasks_path(sort: "priority") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.user.user_name %></td>
        <td class="task_row"><%= task.task_name %></td>
        <td><%= task.to_do %></td>
        <td><%= task.deadline %></td>
        <td><%= task.status %></td>
        <td><%= task.priority %></td>
        <td><%= link_to t('action.show'), task %></td>
        <td><%= link_to t('action.edit'), edit_task_path(task) %></td>
        <td><%= link_to t('action.destroy'), task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

