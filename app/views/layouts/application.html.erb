<!DOCTYPE html>
<html>
  <head>
    <title>TaskApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="container">
    <ul class="nav justify-content-end">
      <li class="nav-item">
        <%= link_to "タスク管理アプリ", tasks_path %>
      </li>
    <% if current_user.admin == true %>
      <li class="nav-item">
        <%= link_to "ユーザー管理", admin_users_path, class: "nav-link active"%>
      </li>
    <% end %>
    <% if logged_in? %>
      <li class="nav-item">
        <%= link_to "タスク一覧", tasks_path, class: "nav-link active"%>
      </li>
      <li class="nav-item">
        <%= link_to "タスク登録", new_task_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "ユーザー情報", user_path(current_user.id), class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "ログアウト", session_path(current_user.id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'nav-link'%>
      </li>
    <% else %>
      <li class="nav-item">
        <%= link_to "ユーザー新規登録", new_user_path %>
      </li>
      <li class="nav-item">
        <%= link_to "ログイン", new_session_path %>
      </li>
    <% end %>
    </ul>

    <% if logged_in? %>
      <p class="login"><strong><%= link_to current_user.user_name, user_path(current_user.id) %></strong>さんでログイン中</p>
    <% end %>
    <%= yield %>
  </body>
</html>
