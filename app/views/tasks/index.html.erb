<h1><%= t('action.tasks') %></h1>

<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th><%= t('task.task_name') %></th>
      <th><%= t('task.to_do') %></th>
      <th><%= t('task.deadline') %></th>
      <th><%= t('task.status') %></th>
      <th><%= t('task.priority') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td class="task_row"><%= task.task_name %></td>
        <td><%= task.to_do %></td>
        <td><%= task.deadline %></td>
        <td><%= task.status %></td>
        <td><%= task.priority %></td>
        <td><%= link_to t('action.show'), task %></td>
        <td><%= link_to t('action.edit'), edit_task_path(task) %></td>
        <td><%= link_to t('action.destroy'), task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('action.new'), new_task_path %>
